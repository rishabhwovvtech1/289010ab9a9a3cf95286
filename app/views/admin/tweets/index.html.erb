<div class="container-div page-body">
  <div>
    <div class="col-xs-12" align="center">
      <u><h2> Tweets from users you follow </h2></u>
    </div>

    <div>
      <h1>Tweets</h1>
      <% if @tweets ==[] %>
        <h4>No Tweets from Users you follow</h4>
        <% else %>
      <% @tweets.each_with_index  do |tweet,i| %>
        <div class="container tweet">
          <h4><b><div class="col-md-12">#<%= i+1 %></div></b>
            <b><div class="col-md-12">Tweet From - <%=tweet.user.name %></div></b>
          <div class="col-md-12">Tweet - <%= tweet.description %></h4></div>
      <% end %>
        <% end %>
    </div>


  </div>

</div>
