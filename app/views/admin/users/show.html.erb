<div class="container-div page-body">
  <div>
    <div class="col-xs-12" align="center">
      <u><h2> <%= @user.name %>'s Profile </h2></u>
    </div>

  <%#= link_to edit_admin_user_path(user), class: "btn btn-blue" do %>
  <!--      Edit-->
  <%# end %>
<% if !@same %>
  <% if @follows %>
      <div class="btn btn-green">
        Following
      </div>
      <% else  %>
    <h3>
      <%= link_to follow_admin_users_path(follow_id: @user.id), class: "btn btn-green" do %>
        Follow
      <% end %>
    </h3>
    <% end %>
<% end %>
  <div>
    <h1><%= @user.name %>'s Tweets</h1>
    <% if @tweets ==[] %>
      <h4>No Tweets found from this user's account</h4>
    <% else %>
    <% @tweets.each_with_index  do |tweet,i| %>
      <div class="container tweet">
        <h4><div class="col-md-4">#<%= i+1 %></div>
          <div class="col-md-4"><%= tweet.description %></h4></div>
    <% end %>
      <% end %>
  </div>


</div>

</div>
